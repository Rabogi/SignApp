@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<div>
    <p role="status">Current count: @currentCount</p>

    <button type="submit" class="btn btn-primary" @onclick="IncrementCount">Click me</button>

    </div>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
